<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_2"
    android:layout_height="match_parent"
    tools:context=".Result.WriterPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment Writer"
            android:fontFamily="@font/title"
            android:textStyle="bold"
            android:layout_marginTop="-3dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

<EditText
    android:id="@+id/title"
    android:fontFamily="@font/button"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="80dp"
    android:hint="Title here"
    android:padding="5dp"
    android:textColor="@color/black"
    android:textSize="20dp"
    android:background="@drawable/custom_edittext"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Type"/>

        <TextView
            android:fontFamily="@font/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Tone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/type"
            android:textColor="@color/black"
            android:fontFamily="@font/button"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:hint="Type here"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext" />

        <EditText
            android:id="@+id/tone"
            android:textColor="@color/black"
            android:fontFamily="@font/button"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Tone here"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Number of Word"/>

        <TextView
            android:fontFamily="@font/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Language"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <EditText
            android:textColor="@color/black"
            android:fontFamily="@font/button"
            android:id="@+id/word"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:hint="Number of word"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_back"/>

    </LinearLayout>

    <TextView
        android:fontFamily="@font/title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Academic Level"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_margin="5dp"
        android:layout_width="250dp"
        android:layout_height="55sp"
        android:background="@drawable/spinner_back"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/generate"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="30dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#0195FF"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp">

        <TextView
            android:fontFamily="@font/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Generate"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>