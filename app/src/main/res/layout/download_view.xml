<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="150dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/projectType"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Project Type"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/indroduction"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Type : Science"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/indroduction"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:weightSum="3"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/character"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="Number of Character : 450"/>

                <TextView
                    android:id="@+id/language"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="Language : English"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/button"
                        android:textColor="@color/black"
                        android:text="17 sep 2025"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/button"
                        android:textColor="@color/black"
                        android:text="10:35 AM"/>

                </LinearLayout>
<TextView
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:textColor="@color/black"
    android:textSize="15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textStyle="normal"
    android:fontFamily="@font/button"
    android:text=""/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
<TextView
    android:id="@+id/view_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textSize="20dp"
    android:layout_margin="5dp"
    android:fontFamily="@font/title"/>


                <ImageView
                    android:id="@+id/delete"
                    android:layout_gravity="start"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                     android:layout_margin="10dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/trash_c"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
